{% extends 'admin/layout.html.twig' %}

{% block content %}
    <main class="container" id="content">
        <form action="{{ doc_root }}/admin/edit-role/{{ member.id }}" method="POST" class="narrow">
            <h1>Edit Role</h1>
            <p>Member name: {{ member.forename }} {{ member.surname }}</p>
            <select name="role" class="form-control">
                <option value="member" {% if member.role == 'member' %}selected{% endif %}>
                    Member
                </option>
                <option value="admin" {% if member.role == 'admin' %}selected{% endif %}>
                    Admins
                </option>
                <option value="suspended" {% if member.role == 'suspended' %}selected{% endif %}>
                    Suspended
                </option>
            </select>
            <br />
            <input type="submit" class="btn btn-primary" value="Update role" />
        </form>
    </main>
{% endblock %}
