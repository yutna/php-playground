{% extends 'admin/layout.html.twig' %}

{% block content %}
    <main class="container" id="content">
        <section class="header">
            <h1>Categories</h1>

            {% if success %}
                <div class="alert alert-success">
                    {{ success }}
                </div>
            {% endif %}

            {% if failure %}
                <div class="alert alert-danger">
                    {{ failure }}
                </div>
            {% endif %}

            <p>
                <a href="{{ doc_root }}/admin/category.php" class="btn btn-primary">
                    Add new category
                </a>
            </p>
        </section>

        <table class="categories">
            <thead>
                <tr>
                    <th>Name</th>
                    <th class="edit">Edit</th>
                    <th class="del">Delete</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>
                            <strong>{{ category.name }}</strong>
                        </td>
                        <td>
                            <a href="{{ doc_root }}/admin/category.php?id={{ category.id }}" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <a href="{{ doc_root }}/admin/category-delete.php?id={{ category.id }}" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}
