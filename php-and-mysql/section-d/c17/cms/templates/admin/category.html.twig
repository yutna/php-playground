{% extends 'admin/layout.html.twig' %}

{% block content %}
    <main class="container admin" id="content">
        <form action="{{ doc_root }}/admin/category/{{ id }}" class="narrow" method="POST">
            <h2>Edit Category</h2>

            {% if errors.warning %}
                <div class="alert alert-danger">
                    {{ errors.warning }}
                </div>
            {% endif %}

            <div class="form-group">
                <label for="name">Name: </label>
                <input type="text" class="form-control" name="name" id="name" value="{{ category.name | e('html_attr') }}" />
                <span class="errors">{{ errors.name }}</span>
            </div>

            <div class="form-group">
                <label for="description">Description: </label>
                <textarea class="form-control" name="description" id="description">{{ category.description }}</textarea>
                <span class="errors">{{ errors.description }}</span>
            </div>

            <div class="form-check">
                {% if category.navigation == 1 %}
                    <input type="checkbox" class="form-check-input" name="navigation" id="navigation" value="1" checked />
                {% else %}
                    <input type="checkbox" class="form-check-input" name="navigation" id="navigation" value="1" />
                {% endif %}

                <label for="navigation" class="form-check-label">Navigation</label>
            </div>

            <input type="submit" class="btn btn-primary btn-save" value="save" />
        </form>
    </main>
{% endblock %}
