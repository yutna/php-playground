{% extends 'layout.html.twig' %}

{% block content %}
    <main class="container" id="content">
        <section class="header">
            <h1>Contact Us</h1>
        </section>
        <form action="{{ doc_root }}/contact" class="form-contact" method="POST">
            {% if errors.warning %}
                <div class="alert alert-danger">
                    {{ errors.warning }}
                </div>
            {% endif %}

            {% if success %}
                <div class="alert alert-success">
                    {{ success }}
                </div>
            {% endif %}

            <div class="form-group">
                <label for="email">Email: </label>
                <input type="text" name="email" id="email" value="{{ email }}" class="form-control" />
                <span class="errors">{{ errors.email }}</span>
            </div>

            <div class="form-group">
                <label for="message">Message: </label>
                <textarea class="form-control" name="message" id="message">{{ message }}</textarea>
                <span class="errors">{{ errors.message }}</span>
            </div>

            <input type="submit" class="btn" value="Submit Message" />
        </form>
    </main>
{% endblock %}
